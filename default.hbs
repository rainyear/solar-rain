<script src="{{asset "js/jquery.min.js"}}"></script>
<script src="{{asset "js/amazeui.min.js"}}"></script>
<!--<![endif]-->
<script type="text/javascript" src="http://tajs.qq.com/stats?sId=39210186" charset="UTF-8"></script>
{{ghost_foot}}
</body>
</html>
